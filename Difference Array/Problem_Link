https://cses.fi/problemset/task/1619
---------------------------------------------------
Solution:

#include <bits/stdc++.h>
using namespace std;
 
int main()
{
  int n;
  cin >> n;
 
  map<int, int> m;
  for (int i = 0; i < n; i++)
  {
    int l, r;
    cin >> l >> r;
    m[l]++;
    m[r + 1]--;
  }
  for(auto it=m.begin();it!=m.end();it++){
    if(it==m.begin())
      continue;
    auto prevIt = prev(it);
    it->second = it->second + prevIt->second;
  }
  for(auto it:m){
    cout<<it.first<<' '<<it.second<<endl;
  }
  return 0;
}
