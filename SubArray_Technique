---------------------------------------------------------------------------------------------
**Given an array of n integers, your task is to count the number of subarrays having sum x.
---------------------------------------------------------------------------------------------
#include<bits/stdc++.h>
using namespace std;
#define ll  long long
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

void solve(){
    ll n,x; cin>>n>>x;
    ll sum=0,ans=0;
    map<ll,ll>mp;
    mp[0]=1;
    for(ll i=0; i<n; i++){
        ll a; cin>>a;
        sum+=a;
        ans+=mp[sum-x];
        mp[sum]++;
    }
    cout<<ans<<endl;
}

signed main()
{
    optimize();
    ll t=1;
    //cin>>t;
    while(t--) solve();
    return 0;
}

--------------------------------------------------------------------------------------------------------------------------
**Given an array of n integers, your task is to count the number of subarrays where the sum of values is divisible by n.
--------------------------------------------------------------------------------------------------------------------------
#include<bits/stdc++.h>
using namespace std;
#define ll  long long
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

void solve(){
    ll n; cin>>n;
    ll sum=0, ans=0;
    map<ll,ll>mp;
    mp[0]=1;
    for(ll i=0; i<n; i++){
        ll x; cin>>x;
        sum+=x;
        ans+=mp[(sum%n+n)%n];
        mp[(sum%n+n)%n]++;
    }
    cout<<ans<<endl;
}

signed main()
{
    optimize();
    ll t=1;
    //cin>>t;
    while(t--) solve();
    return 0;
}
